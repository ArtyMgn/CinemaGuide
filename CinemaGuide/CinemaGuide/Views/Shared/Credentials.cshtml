@model Profile

@Html.EditorFor(x => x.UserCredentials.Login,
    new { htmlAttributes = new { placeholder = "Логин", @class = "login__input" } })

@Html.ValidationMessageFor(x => x.UserCredentials.Login)

@Html.EditorFor(x => x.UserCredentials.Password,
    new { htmlAttributes = new { type = "password", placeholder = "Пароль", @class = "login__input" } })

@Html.ValidationMessageFor(x => x.UserCredentials.Password)
