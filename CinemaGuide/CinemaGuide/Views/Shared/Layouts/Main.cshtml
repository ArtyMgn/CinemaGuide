@model Profile

<!DOCTYPE html>
<html>
<head>
    <meta lang="@Model.SearchConfig.Language"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>CinemaGuide</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/index.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/index.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>

<header class="menu">
    <h1 class="menu__title">CinemaGuide</h1>
    
    <div class="menu__actions">
        @if (!Model.IsAuth)
        {
            <div class="menu__actions-login"><a class="menu__actions-login_link" href="/login">Регистрация</a></div>
        }

        <button class="menu__actions-lang" type="button">Язык</button>
    </div>
</header>

@RenderBody()

<footer class="info">
    <div class="info__contacts">Контакты</div>
    <div class="info__creators">Артем Рыжкин<span class="info__creators-separator">&bull;</span>Александр Сатов</div>
    <div class="info__year">2018</div>
</footer>

</body>
</html>
